@model AppointmentScheduler.Contract.Option.EditOption

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Editing Option { #@Model.Id }</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="StringOption" class="control-label">Option Text</label>
                    <input type="text" class="form-control" asp-for="StringOption">
                    <span asp-validation-for="StringOption" class="error"></span>
                </div>
            </div>
        </div>
        <input value="@Model.Id" asp-for="Id" type="hidden"/>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">Create</button>
        </div>
    </div>
</form>